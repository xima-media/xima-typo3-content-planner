#!/bin/bash

VERSION=12

rm -rf /var/www/html/.test/$VERSION/*
mkdir -p /var/www/html/.test/$VERSION/
echo "{}" > /var/www/html/.test/$VERSION/composer.json
composer config extra.typo3/cms.web-dir public -d /var/www/html/.test/$VERSION
composer config repositories.$EXTENSION_KEY path ../../$EXTENSION_KEY -d /var/www/html/.test/$VERSION
composer config --no-plugins allow-plugins.typo3/cms-composer-installers true -d /var/www/html/.test/$VERSION
composer config --no-plugins allow-plugins.typo3/class-alias-loader true -d /var/www/html/.test/$VERSION
composer req t3/cms:'^12' $PACKAGE_NAME:'*@dev' --no-progress -n -d /var/www/html/.test/$VERSION

cd /var/www/html/.test/$VERSION

export DATABASE="database_$VERSION"
TYPO3_INSTALL_DB_DBNAME=$DATABASE
mysql -uroot -proot -e "DROP DATABASE IF EXISTS $DATABASE"
vendor/bin/typo3 install:setup -n --database-name $DATABASE
vendor/bin/typo3 configuration:set 'BE/debug' 1
vendor/bin/typo3 configuration:set 'FE/debug' 1
vendor/bin/typo3 configuration:set 'SYS/devIPmask' '*'
vendor/bin/typo3 configuration:set 'SYS/displayErrors' 1
vendor/bin/typo3 configuration:set 'SYS/trustedHostsPattern' '.*.*'
vendor/bin/typo3 configuration:set 'MAIL/transport' 'smtp'
vendor/bin/typo3 configuration:set 'MAIL/transport_smtp_server' 'localhost:1025'
vendor/bin/typo3 configuration:set 'MAIL/defaultMailFromAddress' 'admin@example.com'
vendor/bin/typo3 configuration:set 'GFX/processor' 'ImageMagick'
vendor/bin/typo3 configuration:set 'GFX/processor_path' '/usr/bin/'

sed -i "/'deprecations'/,/^[[:space:]]*'disabled' => true,/s/'disabled' => true,/'disabled' => false,/" /var/www/html/.test/$VERSION/config/system/settings.php

sed -i -e "s/base: ht\//base: \//g" /var/www/html/.test/$VERSION/config/sites/main/config.yaml
sed -i -e 's/base: \/en\//base: \//g' /var/www/html/.test/$VERSION/config/sites/main/config.yaml

vendor/bin/typo3 cache:flush
