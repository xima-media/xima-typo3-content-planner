includes:
	- %rootDir%/../../konradmichalik/phpstan-typo3-preset/phpstan.neon.dist
	- phpstan-baseline.neon

parameters:
	level: 6

	scanDirectories:
		- ../../vendor
		- ../../vendor/phpunit/phpunit/src
	paths:
		- ../../Classes
		- ../../Configuration
		- ../../Resources

	excludePaths:
		- ../../.Build (?)
		# TYPO3 v14 only - uses classes that don't exist in v13
		- ../../Classes/EventListener/AfterFileStorageTreeItemsPreparedListener.php

	type_coverage:
		constant: 0 # TODO: Set to 100, when PHP 8.3 is minimum requirement

	typo3:
		requestGetAttributeMapping:
			routing: 'TYPO3\CMS\Backend\Routing\RouteResult'
			route: 'TYPO3\CMS\Backend\Routing\Route'
